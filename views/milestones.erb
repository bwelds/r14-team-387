<h3>Welcome @<%= @client.info['screen_name'] %>!</h3>
            
            <div class="row demo-tiles">
                <div class="col-xs-12">
                  <div class="tile">
                     <img src="img/miletweets-logo.png" alt="Miletweets" class="tile-image big-illustration">
                    
                    <h3 class="tile-title">@<%= @client.info['screen_name'] %> has a total of <%= @total %> tweets</h3>
                    <p> <%= @averages_text %></p>
                   
                   
                  </div>
                </div>
            </div>

<h4>Upcoming milestone tweets</h4>

        <div class="row demo-tiles">
                

                <div class="col-xs-4">
                  <div class="tile">
                    <img src="img/icons/svg/heart.svg" alt="Heart" class="tile-image">
                    <h3 class="tile-title"><%= @next_1k[:result] %></h3>
                    <p><%= @hours_away_1k %></p>
                    <p><%= @days_away_1k %></p>
                    <p><%= @weeks_away_1k %></p>
                    <a class="btn btn-primary btn-large btn-block" href="#prompt"
     data-toggle="modal">Give me a heads up</a>
                  </div>
                </div>

                <div class="col-xs-4">
                  <div class="tile">
                    <img src="img/icons/svg/coins.svg" alt="Coins" class="tile-image">
                    <h3 class="tile-title"><%= @next_5k[:result] %></h3>
                    <p><%= @hours_away_5k %></p>
                    <p><%= @days_away_5k %></p>
                    <p><%= @weeks_away_5k %></p>
                    <a class="btn btn-primary btn-large btn-block" href="#prompt"
     data-toggle="modal">Give me a heads up</a>
                  </div>
                </div>

                <div class="col-xs-4">
                  <div class="tile">
                    
                    <img src="img/icons/svg/thoughts.svg" alt="Thoughts" class="tile-image">
                    <h3 class="tile-title"><%= @next_10k[:result] %></h3>
                    <p><%= @hours_away_10k %></p>
                    <p><%= @days_away_10k %></p>
                    <p><%= @weeks_away_10k %></p>
                    <a class="btn btn-primary btn-large btn-block" href="#prompt"
     data-toggle="modal">Give me a heads up</a>
                  </div>

                </div>

        </div>

<div class="modal" id="prompt">
    <% if loggedin? %>
        <!-- user is logged in -->
        <%= erb :emailprompt %>
    <% else %> 
        <%= erb :loginprompt %>
    <% end %>
</div>

